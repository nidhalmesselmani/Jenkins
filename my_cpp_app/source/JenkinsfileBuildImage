pipeline {
    agent { 
        node {
            label 'docker-agent-cpp'
            }
      }
      stages {
        stage('Build Image') {
            steps {
                echo 'Build....'
                sh '''
                cd my_cpp_app/source
                docker build -t applictation_cpp_to_deploy_to_k8s .
                '''
            }
        }
      }
       /*** workspace clean up*/
  post {
    always {
      cleanWs()
    }
  }  
}