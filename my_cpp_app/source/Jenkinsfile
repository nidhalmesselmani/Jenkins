pipeline {
    agent { 
        node {
            label 'docker-agent-cpp'
            }
      }
    stages {
        stage('Create') {
            steps {
                echo "Creating.."
                sh '''
                  if [ ! -d "my_cpp_app/build" ]; then
                    mkdir my_cpp_app/build
                  fi                
                '''
            }
        }
        stage('Generate') {
            steps {
                echo "Generating.."
                sh '''
                  cd my_cpp_app/build
                  cmake -G"Unix Makefiles" -DCMAKE_CXX_FLAGS="-Wno-error=deprecated-copy" -D CMAKE_CXX_COMPILER=g++ ../source/ 
                '''
            }
        }
        stage('Build') {
            steps {
                echo "Building.."
                sh '''
                  cd my_cpp_app/build
                  cmake --build .
                '''
            }
        }
        stage('Test') {
            steps {
                echo "Testing.."
                sh '''
                  cd my_cpp_app/build
                  ./HelloAppBinary
                '''
            }
        }

        stage('Deliver') {
            steps {
                echo 'Deliver....'
                sh '''

                '''
            }
        }
        stage('Cleaning'){
            steps {
                echo "Cleaning.."
                sh '''
                  cd my_cpp_app/build
                  rm -rf *
                '''
            }
        }
    }
}